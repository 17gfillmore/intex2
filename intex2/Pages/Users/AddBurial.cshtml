                    </form>
                    <br />
                    <div asp-validation-summary="All"></div>

                    <button class="btn btn-primary" type="submit">Add record</button>


                </div>
            </div>
        </div><br><br><br>
    </div>
</section>
<!-- end section -->



@functions {
    public class ListModel : ResearchPageModel
    {
        public UserManager<IdentityUser> UserManager;
        public ListModel(UserManager<IdentityUser> userManager)
        {
            UserManager = userManager;
        }

        public BurialId burialId { get; set; }

        public BurialCharacteristic burialCharacteristic { get; set; }

        public BurialNote burialNote { get; set; }

        public RemainsCharacteristic remainsCharacteristic { get; set; }
    }
}

