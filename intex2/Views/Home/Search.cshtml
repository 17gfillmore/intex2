@{
    ViewBag.Title = "Search";
}

<!-- start page title -->
<section class="p-0">
    <div class="container-fluid position-relative">
        <div class="row">
            <div class="swiper-container white-move full-screen md-h-650px sm-h-500px">
                <div class="swiper-slide cover-background" style="background-image:url('/images/search.jpg');">
                    <div class="opacity-extra-medium bg-dark-slate-blue"></div>
                    <div class="container h-100">
                        <div class="row justify-content-center h-100">
                            <div class="col-12 col-xl-6 col-sm-7 d-flex flex-column justify-content-center text-center h-100">
                                <span class="alt-font font-weight-500 text-extra-medium letter-spacing-2px text-white text-uppercase d-block margin-35px-bottom sm-margin-15px-bottom">Welcome to BYU's Egypt Excavation Project Team</span>
                                <h1 class="alt-font font-weight-600 title-medium text-white text-uppercase letter-spacing-minus-4px margin-45px-bottom sm-letter-spacing-minus-1px sm-margin-30px-bottom text-shadow-large sm-no-text-shadow xs-w-90 mx-auto">Mummy Search Page</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end page title -->
<!-- start section -->
<section class="bg-light-gray pt-0">
    <br>
    <div class="container">
        <div class="row"></div>
        <div class="col-12 text-center" style="max-width: 1200px">
            <div class="bg-medium-dark-gray"></div>
            <div class="row">
                <div class="col-12 col-xl-4 col-md-3 col-sm-10 align-items-left text-black text-md-left sm-margin-30px-bottom wow animate__fadeIn" data-wow-delay="0.1s">
                    <h5 class="alt-font font-weight-600 mb-0 md-w-90 sm-w-100"><strong>Filter your search</strong></h5><br>
                    <!-- start collapsibles -->
                    <div>
                        <!-- collapsible 1 -->
                        <button type="button" class="my-collapsible">Gender</button>
                        <div class="my-content">
                            <input type="checkbox" class="checkbox" /> Male<br>
                            <input type="checkbox" class="checkbox" /> Female
                        </div>

                        <!-- collapsible 2 -->
                        <button type="button" class="my-collapsible">Age</button>
                        <div class="my-content">
                            <input type="checkbox" class="checkbox" /> 0-5 yrs<br>
                            <input type="checkbox" class="checkbox" /> 5-10 yrs<br>
                            <input type="checkbox" class="checkbox" /> 10-20 yrs<br>
                            <input type="checkbox" class="checkbox" /> 20-30 yrs<br>
                            <input type="checkbox" class="checkbox" /> 30-50 yrs<br>
                            <input type="checkbox" class="checkbox" /> 50+ yrs<br>
                        </div>

                        <!-- collapsible 3 -->
                        <button type="button" class="my-collapsible">Hair Color</button>
                        <div class="my-content">
                            <input type="checkbox" /> Black<br>
                            <input type="checkbox" /> Blonde<br>
                            <input type="checkbox" /> Brown<br>
                        </div>

                        <!-- collapsible 4 -->
                        <button type="button" class="my-collapsible">Burial Depth</button>
                        <div class="my-content">
                            <input type="checkbox" /> 0-1 meters<br>
                            <input type="checkbox" /> 1-2 meters<br>
                            <input type="checkbox" /> 2-3 meters<br>
                            <input type="checkbox" /> 3-4 meters<br>
                            <input type="checkbox" /> 4-5 meters<br>
                            <input type="checkbox" /> 5+ meters<br>
                        </div>

                        <!-- collapsible 5 -->
                        <button type="button" class="my-collapsible">Length</button>
                        <div class="my-content">
                            <input type="checkbox" /> 0.0 - 0.5 m<br>
                            <input type="checkbox" /> 0.5 - 0.1 m<br>
                            <input type="checkbox" /> 1.0 - 1.5 m<br>
                            <input type="checkbox" /> 1.5 - 2.0 m<br>
                            <input type="checkbox" /> 2.0+ m<br>
                        </div>
                    </div><br>
                    <a asp-action="#"><input class="btn btn-fancy btn-medium btn-dark-gray" value="Search" /></a>
